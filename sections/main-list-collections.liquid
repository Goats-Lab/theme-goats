<style>
  #shopify-section-{{ section.id }} {
    --collection-list-gap: 1.75rem;
  }

  .mc-collections {
    background: #05030f;
    border-radius: 28px;
    padding: 2.5rem 1.5rem;
  }

  @media screen and (min-width: 900px) {
    .mc-collections {
      padding: 3.25rem 2rem;
    }
  }

  .mc-collections__grid {
    display: grid;
    gap: var(--collection-list-gap);
    grid-template-columns: repeat(
      auto-fit,
      minmax(220px, 1fr)
    );
  }

  .mc-collections-card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 22px;
    padding: 0.75rem;
    background:
      radial-gradient(circle at top left, #1e1237 0, #05030f 40%, #05030f 100%);
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.02),
      0 18px 40px rgba(0, 0, 0, 0.85),
      0 0 28px rgba(255, 120, 210, 0.22);
    overflow: hidden;
    transition: transform .18s ease, box-shadow .18s ease;
  }

  .mc-collections-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 24px 50px rgba(0, 0, 0, 0.95),
      0 0 32px rgba(255, 120, 210, 0.5);
  }

  .mc-collections-card__media {
    position: relative;
    border-radius: 18px;
    overflow: hidden;
    background: #0b0815;
    aspect-ratio: 4 / 5;
  }

  .mc-collections-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.03);
    transition: transform .4s ease;
    display: block;
  }

  .mc-collections-card:hover .mc-collections-card__media img {
    transform: scale(1.07);
  }

  .mc-collections-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(2, 0, 12, 0.1) 0%,
      rgba(2, 0, 12, 0.35) 45%,
      rgba(2, 0, 12, 0.9) 100%
    );
  }

  .mc-collections-card__body {
    position: absolute;
    inset-inline: 0.9rem;
    bottom: 0.9rem;
    color: #fff;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .mc-collections-card__brand {
    display: inline-flex;
    align-items: center;
    padding: 0.1rem 0.65rem;
    border-radius: 999px;
    font-size: 0.7rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(5, 3, 18, 0.85);
    border: 1px solid rgba(255, 163, 232, 0.6);
  }

  .mc-collections-card__title {
    margin: 0;
    font-size: 1.02rem;
    font-weight: 650;
  }

  .mc-collections-card__subtitle {
    margin: 0;
    font-size: 0.8rem;
    color: #f4dcff;
    opacity: 0.9;
  }

  .mc-collections__head {
    text-align: center;
    margin-bottom: 2rem;
  }

  .mc-collections__eyebrow {
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: .18em;
    color: #ff9be9;
    margin-bottom: 0.25rem;
  }

  .mc-collections__title {
    font-size: 1.6rem;
    color: #ffffff;
    margin: 0;
  }

  .mc-collections__subtitle {
    margin: 0.5rem auto 0;
    max-width: 540px;
    font-size: 0.9rem;
    color: #e7d7ff;
    opacity: 0.9;
  }
</style>

