<price-list class="price-list {% if context == 'product' %}price-list--product{% endif %}">
  {%- if variant != blank -%}
    {%- assign pix_price = variant.price | times: 0.85 -%}

    <div style="margin-bottom: 6px;">
      <sale-price class="{% if variant.compare_at_price > variant.price %}{{ on_sale_price_classes }}{% else %}{{ regular_price_classes }}{% endif %}">
        <div style="font-size: 16px;">
          {{ variant.price | money }}
          {%- if context == 'product' -%}
            <div style="font-size: 12px; font-weight: 400;">até 2x sem juros</div>
          {%- endif -%}
        </div>
      </sale-price>

      {%- if variant.compare_at_price > variant.price -%}
        <compare-at-price class="{{ compare_at_price_classes }}">
          {{ variant.compare_at_price | money }}
        </compare-at-price>
      {%- endif -%}

      {%- if context == 'product' -%}
        <div class="PixPriceBox" style="margin-top: 4px;">
          <div style="font-size: 18px; font-weight: 600; color: #169c5b;">
            R$ {{ pix_price | money_without_currency | replace: '.', ',' }} <span style="font-weight: 400; font-size: 14px;">no PIX</span>
          </div>
        </div>
      {%- endif -%}
    </div>

  {%- elsif line_item != blank -%}
    <sale-price class="{% if line_item.original_price > line_item.final_price %}{{ on_sale_price_classes }}{% else %}{{ regular_price_classes }}{% endif %}">
      {{ line_item.final_price | money }}
    </sale-price>

    {%- if line_item.original_price > line_item.final_price -%}
      <compare-at-price class="{{ compare_at_price_classes }}">
        {{ line_item.original_price | money }}
      </compare-at-price>
    {%- endif -%}

  {%- elsif product != blank -%}
    {%- assign variant = product.selected_or_first_available_variant -%}
    {%- assign pix_price = variant.price | times: 0.85 -%}

    <div style="margin-bottom: 6px;">
      <sale-price class="{% if variant.compare_at_price > variant.price %}{{ on_sale_price_classes }}{% else %}{{ regular_price_classes }}{% endif %}">
        <div style="font-size: 16px;">
          {{ variant.price | money }}
          {%- if context == 'product' -%}
            <div style="font-size: 12px; font-weight: 400;">até 2x sem juros</div>
          {%- endif -%}
        </div>
      </sale-price>

      {%- if variant.compare_at_price > variant.price -%}
        <compare-at-price class="{{ compare_at_price_classes }}">
          {{ variant.compare_at_price | money }}
        </compare-at-price>
      {%- endif -%}

      {%- if context == 'product' -%}
        <div class="PixPriceBox" style="margin-top: 4px;">
          <div style="font-size: 18px; font-weight: 600; color: #169c5b;">
            R$ {{ pix_price | money_without_currency | replace: '.', ',' }} <span style="font-weight: 400; font-size: 14px;">no PIX</span>
          </div>
        </div>
      {%- endif -%}
    </div>

  {%- else -%}
    <sale-price class="{{ regular_price_classes }}">
      {{ 4999 | money }}
    </sale-price>
  {%- endif -%}
</price-list>